<StackPanel x:Class="Lekco.Promissum.DemoHarness.PropertyFilterViewPanel"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:ctrl="clr-namespace:Lekco.Wpf.Control;assembly=Lekco.Wpf"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:flt="clr-namespace:Lekco.Wpf.Control.Filter;assembly=Lekco.Wpf"
            xmlns:local="clr-namespace:Lekco.Promissum.DemoHarness"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            Width="250"
            mc:Ignorable="d">

    <ctrl:PropertyFilterView AddFilterCommand="{Binding AddFilterCommand}"
                             BorderThickness="1"
                             FilterGroupNode="{Binding RootFilterVM}" />

    <Button Margin="0,5,0,0"
            Command="{Binding RefreshExpressionCommand}"
            Content="Generate Expression" />

    <TextBlock Margin="0,5,0,0"
               Text="Exp:" />

    <TextBlock FontFamily="Consolas"
               Text="{Binding Expression}"
               TextWrapping="Wrap" />

</StackPanel>
