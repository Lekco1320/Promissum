<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:cvt="clr-namespace:Lekco.Wpf.Utility.Converter"
                    xmlns:flt="clr-namespace:Lekco.Wpf.Utility.Filter"
                    xmlns:vm="clr-namespace:Lekco.Wpf.MVVM.Filter">

    <cvt:EnumIntConverter x:Key="EnumIntConverter" />

    <cvt:NumericStringConverter x:Key="NumericStringConverter" />

    <DataTemplate x:Key="PropertyNumericFilterTemplate"
                  DataType="{x:Type vm:PropertyNumericFilterVM`2}">

        <StackPanel Margin="3,0"
                    Orientation="Horizontal">

            <TextBlock VerticalAlignment="Center">

                <Run Text="{Binding DisplayName}" /><Run Text="：" />

            </TextBlock>

            <ComboBox MinWidth="50"
                      MaxWidth="80"
                      SelectedIndex="{Binding FilterType, Converter={StaticResource EnumIntConverter}, ConverterParameter={x:Type flt:NumericFilterType}}">

                <ComboBoxItem Content="等于" />
                <ComboBoxItem Content="小于" />
                <ComboBoxItem Content="小于等于" />
                <ComboBoxItem Content="大于" />
                <ComboBoxItem Content="大于等于" />

            </ComboBox>

            <TextBox Width="80"
                     Margin="5,0,0,0"
                     Text="{Binding Value, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource NumericStringConverter}}" />

        </StackPanel>

    </DataTemplate>

</ResourceDictionary>