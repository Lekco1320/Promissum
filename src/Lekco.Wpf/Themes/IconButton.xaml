<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ctrl="clr-namespace:Lekco.Wpf.Control">

    <Style TargetType="{x:Type ctrl:IconButton}">

        <Setter Property="Foreground"
                Value="{DynamicResource GCBlueToCDeepBlueBrush}" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ctrl:IconButton}">

                    <Border Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">

                        <Viewbox Width="16"
                                 Height="16">

                            <Path x:Name="icon"
                                  Data="{TemplateBinding IconData}"
                                  Fill="{TemplateBinding Foreground}" />

                        </Viewbox>

                    </Border>

                    <ControlTemplate.Triggers>

                        <Trigger Property="IsMouseOver"
                                 Value="True">

                            <Setter TargetName="icon"
                                    Property="Fill"
                                    Value="{DynamicResource CLightBlueBrush}" />

                        </Trigger>

                        <Trigger Property="IsEnabled"
                                 Value="False">

                            <Setter TargetName="icon"
                                    Property="Fill"
                                    Value="{DynamicResource CDimGrayBrush}" />

                        </Trigger>

                    </ControlTemplate.Triggers>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>