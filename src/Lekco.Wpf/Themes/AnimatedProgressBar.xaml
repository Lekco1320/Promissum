<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ctrl="clr-namespace:Lekco.Wpf.Control">

    <Style TargetType="{x:Type ctrl:AnimatedProgressBar}">

        <Setter Property="Background"
                Value="White" />

        <Setter Property="BorderBrush"
                Value="LightGray" />

        <Setter Property="BorderThickness"
                Value="1" />

        <Setter Property="Height"
                Value="15" />

        <Setter Property="SnapsToDevicePixels"
                Value="True" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ctrl:AnimatedProgressBar}">

                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="3">

                        <Grid>
                            <Border x:Name="PART_Track"
                                    CornerRadius="3" />

                            <Border x:Name="PART_Indicator"
                                    Width="0"
                                    HorizontalAlignment="Left"
                                    ClipToBounds="True"
                                    CornerRadius="2.5">

                                <Border.Background>
                                    <VisualBrush Stretch="None"
                                                 TileMode="Tile"
                                                 Viewbox="0,0,1,1"
                                                 Viewport="0,0,36,34"
                                                 ViewportUnits="Absolute">

                                        <VisualBrush.RelativeTransform>
                                            <TranslateTransform X="0" Y="0" />
                                        </VisualBrush.RelativeTransform>

                                        <VisualBrush.Visual>
                                            <Grid>

                                                <Grid.Background>
                                                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                                        <GradientStop Offset="0" Color="#63AFFF" />
                                                        <GradientStop Offset="1" Color="#5CA2ED" />
                                                    </LinearGradientBrush>
                                                </Grid.Background>

                                                <Path Data="M0,0 18,0 36,34 18,34 Z">
                                                    <Path.Fill>
                                                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                                            <GradientStop Offset="0" Color="#007AFF" />
                                                            <GradientStop Offset="1" Color="#006AEF" />
                                                        </LinearGradientBrush>
                                                    </Path.Fill>
                                                </Path>

                                            </Grid>
                                        </VisualBrush.Visual>

                                    </VisualBrush>
                                </Border.Background>

                            </Border>

                        </Grid>

                    </Border>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>